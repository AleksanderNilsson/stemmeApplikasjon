@model stemmeApp.Models.AdminModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this user?</h3>
@Html.ActionLink("Back to List", "Index")
<div>
    <hr />
    <div class="dl-horizontal">

        <strong>@Html.DisplayNameFor(model => model.Username)</strong>
        <p style="font-style: italic;">@Html.DisplayFor(model => model.Username)</p>
        @ViewBag.Username

    </div>

</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>

    <br />
    <strong>@Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })</strong> 

}