@model stemmeApp.Models.CandidateModel

@{
    ViewBag.Title = "Candidate";
}

<h2>Candidate</h2>

@using (Html.BeginForm("Candidate", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>CandidateModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
