@using System.Configuration
@using Microsoft.AspNet.Identity
@model List<stemmeApp.Models.VoteModel>
<link rel="stylesheet" href="~/Content/Site.css">

@{
    ViewBag.Title = "Vote";
}

<h2>Vote</h2>

@foreach (var item in Model)
{
    <div class="b5card" style="width: 18rem;">
        <img class="card-img-top" img src="~/@item.picture" width="178" height="100" alt="..."/>
        <div class="card-body">
            <p class="card-text">@item.username @item.info</p>
        </div>

        <form method="post" action="@Url.Action("Vote", "Home")">
            <input type="text" name="username" value="@item.username" hidden />
            <input class="btn btn-primary" name="submit" type="submit" value="Vote for candidate" onclick="return confirm('Are you sure you want to vote for @item.username')" />
        </form>
    </div>

    {
    }

}

