@using System.Configuration
@using Microsoft.AspNet.Identity
@model List<stemmeApp.Models.VoteModel>
<link rel="stylesheet" href="~/Content/Site.css">

@{
    ViewBag.Title = "Vote";
}

<h2>Vote</h2>

@foreach (var item in Model)
{
    <div class="b5card text-center" style="width: 18rem;">
        <img class="card-img-top" img src="~/@item.picture" width="178" height="150" alt="..." />
        <div class="card-body">
            <p class="card-text"> @item.username <br /> @item.info</p>
        </div>

        <form method="post" action="@Url.Action("Vote", "Home")">
            <input type="text" text-center name="username" value="@item.username" hidden />
            <input class="btn btn-primary" name="submit" type="submit" value="Vote for candidate" onclick="return confirm('Are you sure you want to vote for @item.username')" />
        </form>
    </div>

}
<br/> <br/>

<input class="btn btn-danger" name="submit" type="submit" value="Revoke your vote" onclick="return confirm('Are you sure you want to revoke your vote?)" />


